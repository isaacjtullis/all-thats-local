<link rel="stylesheet" href="signin" />

<div class="form_signin">
  <div class="form-signin-heading">
    <h2>Sign up</h2>
  </div>
  <div class="form-control">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :first_name, label: 'First Name', required: true %>
        <%= f.input :last_name, label: 'Last Name', required: true %>
        <%= f.input :profile_photo, type: :file %>
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :password, label: 'Password', required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, label: 'Confirmation', required: true %>
      </div>
        <div class="form-actions">
          <%= f.button :submit, "Sign Up" %>
        </div>
    <% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>
