<%= stylesheet_link_tag    'application', media: 'all' %>
<%= javascript_include_tag 'application' %>
<link rel="stylesheet" href="form" />

  <div class="form-signin">
    <h1>New City Review</h1>
      <div class="form-control">
        <%= simple_form_for @review do |f| %>
          <div class="form-inputs">
            <div class="row">
              <%= f.label :name, 'Name' %>
              <%= f.text_field :name %>
            </div>

            <div class="row">
              <%= f.input :cusine, label: 'Cusine', collection: Review::CUSINE%>
            </div>

            <div class="row">
              <%= f.input :price, collection: Review::PRICES %>
            </div>

            <div class="row">
              <%= f.label :review, 'Review' %>
              <%= f.text_field :review %>
            </div>

            <div class="row">
              <%= f.submit "Post" %>
            </div>
          <% end %>
        </div>
    </div>
    <%= link_to 'Back', reviews_path %>
</div>
