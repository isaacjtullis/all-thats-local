<% if @review %>
  <%= @review.name %>
  <%= @review.cusine %>
  <%= @review.price %>
  <%= @review.review %>
<% end %>

<%= link_to 'Home', root_path %>

<%= link_to 'Edit Restaurant', edit_review_path(@review) %>
<%= link_to 'Delete', @review, method: :delete, data: {confirm: "Are you sure you want to delete this question?" } %>

<% if @comments != nil %>
  <% @comments.each do |comment| %>
    <li><%= comment.description %><%= link_to ' Edit Comment', edit_review_comment_path(comment.id) %>
    <%= link_to ' Delete Comment', review_comment_path(comment), method: :delete, data: {confirm: 'Are you sure you want to delete this comment?'}%></li>
    <% if current_user != nil && current_user.admin? %>
        <%= button_to 'ADMIN DELETE', review_comment_path(comment), method: :delete %>
    <% end %>
  <% end %>
<% end %>



<%= simple_form_for [@review, @comment] do |f| %>
  <% if @comment.errors.any? %>
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this answer from being saved:</h2>
  <% end %>
      <ul>
        <% @comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>

  <p>
    <%= f.label :description, "Description" %>
    <%= f.text_field :description %>
    <%= f.submit %>
  </p>
<% end %>
